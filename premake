workspace "bfc"
    configurations { "debug", "release" }

project "bfc"
    kind "ConsoleApp"
    language "C"
    location "build"
    targetdir "build/%{cfg.buildcfg}"

    files { "**.h", "**.c" }
    includedirs { "src/include" }

    filter "configurations:debug"
        defines { "DEBUG" }
        symbols "On"

    filter "configurations:release"
        optimize "Full"

    newaction {
        trigger     = "clean",
        description = "clean the project",
        execute     = function ()
            os.rmdir("./build")
            os.remove("Makefile")
        end
    }